<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="60dp"
        android:background="#7daeaebf">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/btn_mixto"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/column_right_margin"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_filter_1_black_24dp"
                android:text="Oficio+Laudes"
                android:theme="@style/st_mixto" />

            <Button
                android:id="@+id/btn_oficio"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_filter_2_black_24dp"
                android:text="Oficio"
                android:theme="@style/st_oficio" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/btn_laudes"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/column_right_margin"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_filter_3_black_24dp"
                android:text="Laudes"
                android:theme="@style/st_laudes" />

            <Button
                android:id="@+id/btn_tercia"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_filter_4_black_24dp"
                android:text="Tercia"
                android:theme="@style/st_tercia" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/btn_sexta"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/column_right_margin"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_filter_5_black_24dp"
                android:text="Sexta"
                android:theme="@style/st_sexta" />

            <Button
                android:id="@+id/btn_nona"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_filter_6_black_24dp"
                android:text="Nona"
                android:theme="@style/st_nona" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_marginRight="@dimen/column_right_margin"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/btn_visperas"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/column_right_margin"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_filter_7_black_24dp"
                android:text="VÃ­speras"
                android:theme="@style/st_visperas"

                />


            <Button
                android:id="@+id/btn_completas"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_filter_8_black_24dp"
                android:text="Completas"
                android:theme="@style/st_completas" />
            />

        </TableRow>
    </TableLayout>
</RelativeLayout>