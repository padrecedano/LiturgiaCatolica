<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="myImageView">
        <!-- 3dp so the background border to be visible -->
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/image_border</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="st_mixto" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/mixto_boton</item>
    </style>

    <style name="st_oficio" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/oficio_boton</item>
    </style>

    <style name="st_home" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/home</item>
    </style>
    <style name="st_laudes" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/laudes_boton</item>
    </style>

    <style name="st_tercia" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/tercia_boton</item>
    </style>

    <style name="st_sexta" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/sexta_boton</item>
    </style>

    <style name="st_nona" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/nona_boton</item>
    </style>

    <style name="st_visperas" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/visperas_boton</item>
    </style>

    <style name="st_completas" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/completas_boton</item>
    </style>


</resources>
